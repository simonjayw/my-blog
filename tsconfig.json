{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "typings"
  ]
}
